package com.example.demo;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;

@Controller
public class LaptopController {

	@Autowired
	private LaptopRepo laptoprepo;
	
	@GetMapping("/laptops")
	public List<Laptop> getAllLaptops(){
		return laptoprepo.findAll();
	}
	
	@GetMapping("/user/{id}/laptops")
	public List<Laptop> getAllLaptopsForUser(@PathVariable int id){
		
	}
	
	@GetMapping("/laptop/{lid}")
	public Laptop getLaptop(@PathVariable int lid) {
		return laptoprepo.findById(lid).orElse(null);
	}
	
	@GetMapping("/user/{id}/laptop/{lid}")
	public Laptop getLaptopForUser(@PathVariable int lid) {
		return laptoprepo.findById(lid).orElse(null);
	}
}
